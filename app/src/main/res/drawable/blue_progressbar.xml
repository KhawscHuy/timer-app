<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!--Layer List là sự kết hợp của nhiều Shape XML với nhau
Trong Layer-List sẽ chứa danh sách cách thẻ item.
Trong mỗi item chúng ta lại khai báo một Shape XML-->

    <item>
        <shape
            android:shape="ring"
            android:innerRadiusRatio="2.5"
            android:thicknessRatio="30.0"
            android:useLevel="true">
            <gradient
                android:startColor="@color/max_blue"
                android:centerColor="@color/Center_blue"
                android:endColor="@color/min_blue">
            </gradient>
        </shape>
    </item>
</layer-list>